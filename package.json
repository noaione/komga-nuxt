{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "cross-env PORT=8081 nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "build:servlet": "cross-env KOMGA_BUILD_MODE=servlet NODE_ENV=production nuxt generate",
    "postinstall": "nuxt prepare && patch-package",
    "format": "prettier --write --ignore-path .gitignore --ignore-path .prettierignore \"**/*.{js,ts,vue,json,md}\"",
    "lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
    "lint:fix": "eslint --fix --ext .js,.ts,.vue --ignore-path .gitignore ."
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxtjs/color-mode": "^3.3.0",
    "@nuxtjs/eslint-module": "^4.1.0",
    "@nuxtjs/fontaine": "^0.4.1",
    "@nuxtjs/google-fonts": "^3.0.2",
    "@pinia-plugin-persistedstate/nuxt": "^1.2.0",
    "@pinia/nuxt": "^0.5.1",
    "@stylistic/eslint-plugin": "^1.1.0",
    "@types/jsdom": "^21.1.5",
    "@types/node": "^20.8.10",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vueuse/core": "^10.6.0",
    "@vueuse/nuxt": "^10.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.53.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unicorn": "^49.0.0",
    "eslint-plugin-vue": "^9.18.1",
    "jsdom": "^22.1.0",
    "locale-code": "^2.0.2",
    "nuxt": "^3.8.1",
    "nuxt-open-fetch": "^0.3.0",
    "patch-package": "^8.0.0",
    "prettier": "^3.0.3",
    "sass": "^1.69.5",
    "vue": "^3.3.8",
    "vue-i18n": "^9.6.5",
    "vue-router": "^4.2.5",
    "vuetify-nuxt-module": "^0.6.6"
  },
  "dependencies": {
    "@intlify/unplugin-vue-i18n": "^1.5.0",
    "@microsoft/fetch-event-source": "^2.0.1",
    "@vuelidate/core": "^2.0.3",
    "@vuelidate/validators": "^2.0.4",
    "pinia": "^2.1.7"
  },
  "engines": {
    "node": ">=18 || <20",
    "npm": ">=9",
    "yarn": "please-use-npm",
    "pnpm": "please-use-npm"
  }
}
